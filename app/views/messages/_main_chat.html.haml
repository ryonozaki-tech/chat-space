.chat-main
  .chat-main__group-info
    .current-group
      .current-group__name
      = @group.name
      .current-group__member
        Member: 
        - @group.users.each do |u|
          = u.name
    = link_to edit_group_path(@group), class: "edit-btn" do
      Edit

  .chat-main__message-list
    = render @messages

    
    -# .message-box
    -#   %p.messenger msr
    -#   %p.message-time 2020/03/26(Thu) 20:09:55
    -# %p.message-text こんにちは！


  .chat-main__form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: 'input-text', placeholder: 'type a message'
        .input-mask
          = f.label :image, class: 'input-image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'input-image-file'
      = f.submit 'Send', class: 'submit-btn'
